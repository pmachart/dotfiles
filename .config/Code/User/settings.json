{
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "workbench.colorCustomizations": {
        "editor.selectionBorder": "#ffff00",
        "editor.selectionHighlightBorder": "#ffff00",
        "editor.findMatchBorder": "#ff0000",
        "editor.findMatchHighlightBorder": "#ff0000",

        "editorGutter.background": "#0005",

        "editorGutter.addedBackground": "#00ff0066",
        "scrollbarSlider.background": "#0005",
        "scrollbarSlider.hoverBackground": "#ffffff20",
        "editorOverviewRuler.selectionHighlightForeground": "#ffff",

        "editorGutter.modifiedBackground": "#d4af37bb",
        "editorGutter.deletedBackground": "#ff0000aa",
        "editorOverviewRuler.addedForeground": "#00ff0066",
        "editorOverviewRuler.modifiedForeground": "#d4af37bb",
        "editorOverviewRuler.deletedForeground": "#ff0000aa",
        "editorOverviewRuler.infoForeground": "#00ffff88",
        "editorOverviewRuler.warningForeground": "#0000ff88",
        "editorOverviewRuler.errorForeground": "#ff69b4",
    },
    "selectinsidesidebar.defaultStyle": {
        "overviewRulerColor": "#ffff"
    },
    "editor.scrollbar.verticalScrollbarSize": 21,
    "editor.scrollbar.horizontalScrollbarSize": 0,
    "editor.accessibilitySupport": "off",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.colorDecorators": false,
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 3,
    "editor.cursorBlinking": "smooth",
    "editor.foldingStrategy": "indentation",
    "editor.fontFamily": "Iosevka",
    "editor.fontSize": 16,
    "editor.letterSpacing": 0,
    "editor.minimap.maxColumn": 80,
    "editor.quickSuggestionsDelay": 50,
    "editor.renderLineHighlight": "gutter",
    "editor.snippetSuggestions": "top",
    "editor.scrollBeyondLastLine": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.tabSize": 2,
    "scm.diffDecorationsGutterWidth": 5,
    "workbench.commandPalette.preserveInput": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.tabCloseButton": "off",
    "workbench.startupEditor": "newUntitledFile",
    "window.enableMenuBarMnemonics": false,
    "window.newWindowDimensions": "maximized",
    "window.restoreFullscreen": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "search.smartCase": true,
    "search.quickOpen.includeSymbols": true,
    "debug.inlineValues": true,
    "telemetry.enableTelemetry": false,
    "window.zoomLevel": 0,
    "workbench.editor.showTabs": true,
    "editor.minimap.enabled": false,
    "workbench.activityBar.visible": false,
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "local-history.path": "~/.vscode_localhistory/",
    "shellcheck.exclude": [
        2116, // useless echo
        2164, // cd
    ],
    "breadcrumbs.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "eslint.alwaysShowStatus": true,
    "prettier.endOfLine": "lf",
    "extensions.ignoreRecommendations": false,
    "editor.renderWhitespace": "none",
    "window.menuBarVisibility": "toggle",
    "prettier.disableLanguages": [
        "javascript",
        "jsx"
    ],
    "prettier.printWidth": 120,
    "editor.cursorSurroundingLines": 5,
    "eslint.autoFixOnSave": true,
    "files.exclude": {
        "**/.vscode_localhistory": true
    },
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.format": "${author}   ${agoOrDate}   ${tips}   ",
    "gitlens.hovers.currentLine.details": false,
    "gitlens.keymap": "alternate",
    "gitlens.mode.statusBar.alignment": "left",
    "gitlens.codeLens.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,
    "eslint.run": "onSave",
    "workbench.colorTheme": "Cobalt Next",
    "editor.minimap.showSlider": "always",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
}
