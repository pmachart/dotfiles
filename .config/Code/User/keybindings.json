// Place your key bindings in this file to overwrite the defaults
[
  //////////////////// panes //////////////////////
  // splitting
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.files.saveAll"
  },
  {
    "key": "alt+[",
    "command": "workbench.action.splitEditorDown"
  },
  {
    "key": "alt+]",
    "command": "workbench.action.splitEditorRight"
  },

  // move focus among panes
  {
    "key": "alt+left",
    "command": "workbench.action.focusLeftGroup"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.focusRightGroup"
  },
  {
    "key": "alt+up",
    "command": "workbench.action.focusAboveGroup"
  },
  {
    "key": "alt+down",
    "command": "workbench.action.focusBelowGroup"
  },
  // {
  //   "key": "ctrl+pagedown",
  //   "command": "-workbench.action.nextEditor"
  // },
  // {
  //   "key": "ctrl+pageup",
  //   "command": "-workbench.action.previousEditor"
  // },

  // move tab to other pane
  {
    "key": "alt+shift+]",
    "command": "workbench.action.moveEditorToNextGroup"
  },
  {
    "key": "ctrl+alt+right",
    "command": "-workbench.action.moveEditorToNextGroup"
  },
  {
    "key": "alt+shift+[",
    "command": "workbench.action.moveEditorToPreviousGroup"
  },
  {
    "key": "ctrl+alt+left",
    "command": "-workbench.action.moveEditorToPreviousGroup"
  },

  // move tab in current pane
  {
    "key": "alt+shift+a",
    "command": "workbench.action.moveEditorLeftInGroup"
  },
  {
    "key": "ctrl+shift+pageup",
    "command": "-workbench.action.moveEditorLeftInGroup"
  },
  {
    "key": "alt+shift+d",
    "command": "workbench.action.moveEditorRightInGroup"
  },
  {
    "key": "ctrl+shift+pagedown",
    "command": "-workbench.action.moveEditorRightInGroup"
  },
  // resize panes
  {
    "key": "alt+f",
    "command": "workbench.action.evenEditorWidths"
  },
  {
    "key": "ctrl+\\",
    "command": "-workbench.action.splitEditor"
  },
  {
    "key": "ctrl+k ctrl+\\",
    "command": "-workbench.action.splitEditorOrthogonal"
  },

  // cycling tabs in pane
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditorInGroup"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.openNextRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditorInGroup"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "-workbench.action.openPreviousRecentlyUsedEditorInGroup"
  },

  /////////////////////// text /////////////////////

  // duplicate lines
  {
    "key": "ctrl+shift+alt+up",
    "command": "-editor.action.copyLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+alt+down",
    "command": "-editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // delete lines
  {
    "key": "shift+delete",
    "command": "editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+k",
    "command": "-editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly"
  },
  // move lines
  {
    "key": "ctrl+down",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+down",
    "command": "-editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+up",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+up",
    "command": "-editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // indent
  {
    "key": "alt+i",
    "command": "editor.action.reindentlines"
  },
  {
    "key": "shift+alt+i",
    "command": "editor.action.reindentselectedlines"
  },


  /////////////////// panels ////////////////////
  {
    "key": "alt+d",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "ctrl+\\",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "alt+t",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "alt+\\",
    "command": "editor.action.toggleMinimap"
  },
  {
    "key": "ctrl+shift+\\",
    "command": "workbench.action.focusSideBar"
  },

  //////////////////// extensions ///////////////////////
  {
    "key": "ctrl+b",
    "command": "gitlens.toggleFileBlame",
    "when": "editorTextFocus && gitlens:keymap == 'chorded' && gitlens:activeFileStatus =~ /blameable/"
  },
  {
    "key": "ctrl+shift+g b",
    "command": "-gitlens.toggleFileBlame",
    "when": "editorTextFocus && gitlens:keymap == 'chorded' && gitlens:activeFileStatus =~ /blameable/"
  },
  {
    "key": "shift+enter",
    "command": "extension.jumpy-word",
    "when": "editorTextFocus"
  },
  {
    "key": "Escape",
    "command": "extension.jumpy-exit",
    "when": "editorTextFocus && jumpy.isJumpyMode"
  },
  // {
  //   "key": "ctrl+alt+,",
  //   "command": "editsHistory.moveCursorToPreviousEdit"
  // },
  // {
  //   "key": "ctrl+alt+.",
  //   "command": "editsHistory.moveCursorToNextEdit"
  // }

  {
    "key": "ctrl+'",
    "command": "clever.string.nextQuotes",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+;",
    "command": "clever.toggleEnd.semicolon",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+,",
    "command": "clever.toggleEnd.comma",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+pageup",
    "command": "clever.fastJump.big.up",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+pagedown",
    "command": "clever.fastJump.big.down",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+shift+pageup",
    "command": "clever.fastJump.big.selectUp",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+shift+pagedown",
    "command": "clever.fastJump.big.selectDown",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+z",
    "command": "clever.maximize.toggleWithSidebar",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+insert",
    "command": "clever.blockSelect.cleverSelect",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+ctrl+0",
    "mac": "shift+cmd+0",
    "command": "clever.multipast.0toN",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+ctrl+1",
    "mac": "shift+cmd+1",
    "command": "clever.multipast.1toN",
    "when": "editorTextFocus"
  },
]
