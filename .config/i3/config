exec_always --no-startup-id setxkbmap -option caps:Return

exec_always --no-startup-id "setxkbmap -layout us,fr"
bindsym $mod+grave exec --no-startup-id setxkbmap fr
bindsym $mod+twosuperior exec --no-startup-id setxkbmap us

