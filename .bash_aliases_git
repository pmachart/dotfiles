#! /bin/bash

alias gi='git '
alias got='git '
alias gut='git '

alias cdt='cd $(git rev-parse --show-toplevel)'
alias gp='git pull'
alias ga='git add '
alias gada='git add .'
alias gs='git ls'
alias gl='git lg'
alias gcm='git stash && git checkout master && git stash pop'
alias gcd='git stash && git checkout develop && git stash pop'

alias sauce='git add .;git commit -m sauce;git push origin master;'

function nb() {
  local workdir=$PWD
  local branch=$1

  git stash &&
  git co develop &&
  git pull &&
  git checkout -b $branch &&
  git push -u --no-verify origin $branch &&
  git stash pop

  cd $workdir
}
